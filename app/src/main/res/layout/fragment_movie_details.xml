<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:overScrollMode="ifContentScrolls">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.vinay.passioneer.popularmovies.MovieDetailsFragment"
        tools:showIn="@layout/activity_movie_details">

        <ImageView
            android:id="@+id/backdrop_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:maxHeight="400dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/movie_poster_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/user_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="48dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/movie_poster_image"
                android:gravity="right"
                android:text="Rating: 8/10"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/user_rating"
                android:layout_marginRight="48dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/movie_poster_image"
                android:gravity="right"
                android:text="Release Date:  18-06-1992"
                android:textAppearance="?android:textAppearanceMedium" />
        </RelativeLayout>

        <TextView
            android:id="@+id/movie_overview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="Superhit!!!"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>
</ScrollView>
